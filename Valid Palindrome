class Solution {
public:
    bool isPalindrome(string s) {
      string check="";
      for (int i=0;i<s.size();i++){
        if (isalnum(s[i])){
            check+=s[i];
        }
      }
       for (int i=0;i<check.size();i++){ 
        check[i]=tolower(check[i]) ;
        }
        string rev=check;
        reverse(rev.begin(), rev.end());
        if (check == rev) return true;
        return false;
    }

};
